---
import Layout from '../layouts/Layout.astro';
import { ukRegions, slugify} from '../data/uk-regions';
import Hero from '../components/region/Hero.astro';
import WhyChooseUs from '../components/region/WhyChooseUs.astro';
import GetStarted from '../components/region/GetStarted.astro';
import Testimo from '../components/region/Testimo.astro';
import {FAQ} from "../components/FAQ";
import Pricing from '../components/region/Pricing.astro';

export async function getStaticPaths() {
  return Object.keys(ukRegions).map(region => ({
    params: { region: slugify(region) },
    props : { region: region},
  }));
}

const { region } = Astro.props;
const cities = ukRegions[region];
const formattedRegion = region.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());

<Layout title={`CHECKEDIPTV in ${region} : Premium IPTV Subscription Service 2025 | Free Trial`} description={`CHECKEDCHECKEDTV IPTV in ${region} : The Best IPTV Subscription Service in the UK | our iptv coverage all over uk and especially ${region}`}>
  <Hero region={region}/>
  <div class="relative w-screen flex justify-center bg-transparent ">
    <img
      src='lastfeature.webp'
      alt="Dashboard image"
    />
  </div>
  <WhyChooseUs region={region} />
  <Pricing location={region} />
  <Testimo location={region} />
  <GetStarted region={region} />
  <section class="py-10">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-white text-center mb-6">Explore Cities in {formattedRegion}</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {cities.map(city => (
          <a href={`/iptv-uk-${region}/${slugify(city.toLowerCase())}`} class="block bg-white text-blue-600 font-semibold px-4 py-2 rounded-lg shadow hover:bg-red-50 transition-colors text-center">
            {city}
          </a>
        ))}
      </div>
    </div>
  </section>
  <FAQ client:load/>


import GetStarted from '../../components/region/GetStarted.astro';
import {FAQ} from "../../components/FAQ";
import Pricing from '../../components/region/Pricing.astro';

export async function getStaticPaths() {
  return Object.entries(ukRegions).flatMap(([region, cities]) =>
    cities.map(city => ({
      params: {
        region,
        city: city.toLowerCase().replace(/ /g, '-')
      },
      props: {
        region,
        city: city
      },
    }))
  );
}

const { region, city } = Astro.props;
const formattedCity = city.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
const formattedRegion = region.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
